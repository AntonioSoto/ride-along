<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sprint.ride_along.DriverProfileActivity"
    tools:showIn="@layout/activity_driver_profile">

    <TextView
        android:id="@+id/driverProfile_AboutYou"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sobre tí"
        android:background="#e5e9f2"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/driverProfile_Name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/driverProfile_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        app:layout_constraintBottom_toTopOf="@+id/driverProfile_Phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_AboutYou"
        app:layout_constraintHorizontal_bias="0.2"/>

    <TextView
        android:id="@+id/driverProfile_Phone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Teléfono"
        app:layout_constraintBottom_toTopOf="@+id/driverProfile_Time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_Name"/>

    <TextView
        android:id="@+id/driverProfile_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horario"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintBottom_toTopOf="@+id/driverProfile_De"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_Phone"/>

    <TextView
        android:id="@+id/driverProfile_De"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="De"
        app:layout_constraintBottom_toTopOf="@+id/driverProfile_A"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_Time"
        app:layout_constraintHorizontal_bias="0.4"/>

    <TextView
        android:id="@+id/driverProfile_Time1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_constraintBottom_toTopOf="@+id/driverProfile_A"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/driverProfile_De"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_Time"
        app:layout_constraintHorizontal_bias="0.1"/>

    <TextView
        android:id="@+id/driverProfile_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        app:layout_constraintBottom_toTopOf="@+id/driverProfile_AboutCar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_De"
        app:layout_constraintHorizontal_bias="0.4"/>

    <TextView
        android:id="@+id/driverProfile_Time2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="00:00"
        app:layout_constraintBottom_toTopOf="@+id/driverProfile_AboutCar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/driverProfile_A"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_De"
        app:layout_constraintHorizontal_bias="0.13"/>

    <TextView
        android:id="@+id/driverProfile_AboutCar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sobre tu coche"
        android:background="#e5e9f2"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/driverProfile_Model"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_A"/>

    <TextView
        android:id="@+id/driverProfile_ModelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modelo"
        app:layout_constraintBottom_toTopOf="@id/driverProfile_Plate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/driverProfile_Model"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_AboutCar"
        app:layout_constraintHorizontal_bias="0.55"/>

    <TextView
        android:id="@+id/driverProfile_Model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="modelo"
        app:layout_constraintBottom_toTopOf="@+id/driverProfile_Plate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverProfile_AboutCar"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/driverProfile_Plate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Placa"
        app:layout_constraintBottom_toTopOf="@+id/driverProfile_Seats"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_ModelText"/>

    <Spinner
        android:id="@+id/driverProfile_Seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/driverProfile_carPhoto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_Plate"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/driverProfile_SeatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asientos"
        app:layout_constraintBottom_toTopOf="@id/driverProfile_carPhoto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/driverProfile_Seats"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_Plate"
        app:layout_constraintHorizontal_bias="0.6"/>

    <ImageView
        android:id="@+id/driverProfile_carPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/placeholder_car"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driverProfile_Seats"/>

</android.support.constraint.ConstraintLayout>
