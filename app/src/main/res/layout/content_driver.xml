<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sprint.ride_along.DriverActivity"
    tools:showIn="@layout/activity_driver">

    <TextView
        android:id="@+id/register_AboutYou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sobre tí"
        android:background="#e5e9f2"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/register_Name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/register_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/register_Phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_AboutYou"/>

    <EditText
        android:id="@+id/register_Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Teléfono"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/register_Time1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_Name"/>

    <EditText
        android:id="@+id/register_Time1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Hora de entrada"
        android:inputType="time"
        app:layout_constraintBottom_toTopOf="@+id/register_Time2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_Phone" />

    <EditText
        android:id="@+id/register_Time2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Hora de salida"
        android:inputType="time"
        app:layout_constraintBottom_toTopOf="@+id/register_AboutCar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_Time1"/>

    <TextView
        android:id="@+id/register_AboutCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sobre tu coche"
        android:background="#e5e9f2"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/register_Plate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_Time2"/>

    <EditText
        android:id="@+id/register_Plate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Placa"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/register_textViewModel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_AboutCar"/>

    <TextView
        android:id="@+id/register_textViewModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modelo"
        android:textSize="18dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintBottom_toTopOf="@id/register_textViewSeats"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/register_spinnerModels"
        app:layout_constraintTop_toBottomOf="@id/register_Plate"/>

    <Spinner
        android:id="@+id/register_spinnerModels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintBottom_toTopOf="@id/register_spinnerSeats"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_Plate"
        app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
        android:id="@+id/register_textViewSeats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asientos"
        android:textSize="18dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintBottom_toTopOf="@id/button_RegisterContinue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/register_spinnerSeats"
        app:layout_constraintTop_toBottomOf="@id/register_textViewModel"/>

    <Spinner
        android:id="@+id/register_spinnerSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintBottom_toTopOf="@+id/button_RegisterContinue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_spinnerModels"
        app:layout_constraintHorizontal_bias="1.0"/>

    <!--<Button
        android:id="@+id/button_CarPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto del coche"
        app:layout_constraintBottom_toTopOf="@+id/button_RegisterContinue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_spinnerSeats"/>-->

    <Button
        android:id="@+id/button_RegisterContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_spinnerSeats"
        android:onClick="driverMap"/>

</android.support.constraint.ConstraintLayout>